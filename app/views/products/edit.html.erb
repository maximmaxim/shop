<h1>Исправление продукта</h1>

<% form_for(@product, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Имя %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Модель %><br />
    <%= f.text_field :model_of_name %>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :Размер %><br />
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.label :Количество %><br />
    <%= f.text_field :quontity %>
  </p>
  <p>
    <%= f.label :Цена %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :Цвет %><br />
    <%= f.text_field :color %>
  </p>
  
  <p>
    Текущая картинка:<br />
    <%= image_tag @product.avatar.url(:thumb) %>
  </p>
  
  <p>
  <%= f.label :Изменить %> <br />   
  <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.submit "Исправить" %>
  </p>
<% end %>
 


<%= link_to 'Показать', @product %> |
<%= link_to 'Назад', products_path %>
